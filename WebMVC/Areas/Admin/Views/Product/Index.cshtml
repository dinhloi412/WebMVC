@model PagedList.IPagedList<KetNoiCSDL.EF.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Danh sách sản phẩm</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        @using (Html.BeginForm("Index", "Product", FormMethod.Get))
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-md-offset-0">
                        <input type="text" name="searchString" value="@ViewBag.ChuoiTimKiem" />
                        <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
        <table id="example2" class="table table-bordered table-hover">
            <thead>
                <tr>

                    <th>Tên</th>
                    <th>Code</th>
                    <th>Image</th>
                    <th>Loại</th>
                    <th>Giá</th>
                    <th>Tình trạng</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>@item.Name</td>
                    <td>@item.Code</td>
                    <td> <img src="@item.Image" style="height:105px;width:105px;"></td>
                    <td>@item.CategoryID</td>
                    <td>@item.Price</td>
                    <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status? "Hiển thị" : "Ẩn")</a></td>
                    
                    <td>
                        
                        <a href="product/Edit/@item.ID" role="button" class=" btn btn-warning">Sửa</a>

                        <button href="#" class="btn btn-warning" role="button">
                            
                            @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                            {

                                Confirm = "Bạn có muốn xóa sản phẩm này?",
                            OnComplete = "$('#row_" + item.ID + "').remove()",
                            HttpMethod = "Delete"
                            })
                        </button>
                    </td>
                    
                </tr>
                }
            </tbody>
        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new
        {
            page,
       @searchString = ViewBag.ChuoiTimKiem
   }))
    </div>
    <!-- /.table-responsive -->
</div>
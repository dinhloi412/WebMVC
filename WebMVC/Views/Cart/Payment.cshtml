@model List<WebMVC.Models.CartItem>
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cart-main-area pt-100px pb-100px">
    <div class="container">
        @if (Model.Count > 0)
        {
            <h3 class="cart-page-title">Thanh toán</h3>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <form action="#">
                        <div class="table-content table-responsive cart-table-content">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Product Name</th>
                                        <th>UNTIL PRICE</th>
                                        <th>QTY</th>
                                        <th>SUBTOTAL</th>
                                        <th>ACTION</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="product-thumbnail">
                                                <a href="#">
                                                    <img class="img-responsive ml-15px" width=" 142" height="161"
                                                         src="@item.Product.Image" alt="" />
                                                </a>
                                            </td>
                                            <td class="product-name"><a href="#">@item.Product.Name</a></td>
                                            <td class="product-price-cart"><span class="amount"> @(item.Product.Price.HasValue ? item.Product.Price.Value.ToString("N0") : "Liên hệ")</span></td>
                                            <td class="product-quantity">
                                                <div class="cart-plus-minus">
                                                    <input class="txtQuantity" type="text" name="qtybutton" data-id="@item.Product.ID"
                                                           value="@item.Quantity" />
                                                </div>
                                            </td>
                                            <td class="product-subtotal">@(item.Product.Price.GetValueOrDefault(0) * item.Quantity)</td>
                                            <td class="product-remove">
                                                <a href="#"><i class="fa fa-pencil"></i></a>
                                                <a href="#"><i class="fa fa-times"></i></a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>

                    </form>
                    
                </div>
            </div>
        }

    </div>
    <!-- checkout area start -->
    <div class="checkout-area pt-100px pb-100px">
        <div class="container">
            <div class="row">
                @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
                {
                <div class="col-lg-7">
                    <div class="billing-info-wrap">
                        <h3>Billing Details</h3>
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="billing-info mb-4">
                                    <label> Name</label>
                                    <input type="text" name="shipname" />
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="billing-info mb-4">
                                <label>Town / City</label>
                                <input type="text" name="address" />
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6">
                            <div class="billing-info mb-4">
                                <label>Phone</label>
                                <input type="text" class="mobile" />
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="billing-info mb-4">
                                <label>Email </label>
                                <input type="text" class="email" />
                            </div>
                        </div>
                    </div>

                    <div class="checkout-account-toggle open-toggle2 mb-30">
                        <input placeholder="Email address" type="email" />
                        <input placeholder="Password" type="password" />
                        <button class="btn-hover checkout-btn" type="submit">register</button>
                    </div>
                    
                 
                    <div class="Place-order mt-25">
                        <button type="submit" class="btn-hover">Đặt hàng ngay</button>
                
                    </div>
                </div>
                 
                    
                }

            </div>
        </div>
    </div>
</div>
    <!-- checkout area end -->
